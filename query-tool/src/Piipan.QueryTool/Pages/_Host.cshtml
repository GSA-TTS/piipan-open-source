@page "/"
@namespace Piipan.QueryTool.Client
@using Microsoft.AspNetCore.Components.Web
@using Piipan.QueryTool.Client.Components
@using Piipan.QueryTool.Client.Models
@using Piipan.Shared.Client.Components
@using Piipan.Shared.Client.DTO
@using Piipan.Shared.Web
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject IWebAppDataServiceProvider WebAppDataServiceProvider

@{
    await WebAppDataServiceProvider.Initialize();
    ClientAppDataDto clientAppData = new ClientAppDataDto
            {
                Email = WebAppDataServiceProvider.Email,
                StateInfo = WebAppDataServiceProvider.StateInfo,
                BaseUrl = WebAppDataServiceProvider.BaseUrl,
                Location = WebAppDataServiceProvider.Location,
                Role = WebAppDataServiceProvider.Role,
                States = WebAppDataServiceProvider.States,
                AppRolesByArea = WebAppDataServiceProvider.AppRolesByArea,
                LoggedInUsersState = WebAppDataServiceProvider.LoggedInUsersState,
                HelpDeskEmail = WebAppDataServiceProvider.HelpDeskEmail
            };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Piipan Query Tool</title>
    <base href="~/" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link href="/Piipan.QueryTool.styles.css" rel="stylesheet" asp-append-version="true" />
    <link href="/Piipan.QueryTool.Client.styles.css" rel="stylesheet" asp-append-version="true" />
    <component type="typeof(HeadOutlet)" render-mode="WebAssembly" />
</head>

<body>
    <component type="typeof(AppInitiator)" param-AppData="clientAppData" render-mode="WebAssembly" />
    <component type="typeof(App)" render-mode="WebAssembly" />

    <script src="_framework/blazor.webassembly.js"></script>
    <script src="/customjs/utilities.js"></script>
</body>

</html>
